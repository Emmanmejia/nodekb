<% include partials/header %>

<div class="container">
    <br>
    <h1> <%= title %> </h1>
    <br>
    <hr>
    <h2> Your Insurance </h2>
    <br>
        <h3><%= product.name %></h3>
        <h5>Merchant: <%= product.merchant.name %></h5>
        <p><%= product.type %></p>
        <p><%= product.description %></p>
        <p><%= product.price %></p>
    <br>
    <hr>

    <h2> Select Payment Method </h2>

      <form method="POST" action="/products/purchase/<%= product._id %>">
        <div class="form-check">
            <input class="form-check-input" type="radio" name="payment" id="exampleRadios1" value="dragonpay" checked>
            <label class="form-check-label" for="exampleRadios1">
            Dragonpay (OTC / Online Banking / Bancnet / etc.)
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="payment" id="exampleRadios2" value="paypal">
            <label class="form-check-label" for="exampleRadios2">
            Paypal
            </label>
        </div>
            <div class="form-check">
            <input class="form-check-input" type="radio" name="payment" id="exampleRadios3" value="credit">
            <label class="form-check-label" for="exampleRadios3">
            Credit / Debit / ATM Card
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="payment" id="exampleRadios4" value="bankdeposit">
            <label class="form-check-label" for="exampleRadios5">
            Bank Deposit
            </label>
        </div>

        <div id="form-group">
            <input class="form-control" type="text" name="user_id" value="<%= user.id %>" hidden>
        </div>
    
        <div id="form-group">
            <input class="form-control" type="text" name="product_id" value="<%= product.id %>" hidden>
        </div>
        <div id="form-group">
                <input class="form-control" type="number" name="price" value="<%= product.price %>" hidden>
            </div>
    
        <br>
            <input class="btn btn-success" type="submit" value="Submit Application">
    </form>
</div>

<% include partials/footer %>