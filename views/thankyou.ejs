<% include partials/header %>

<div class="container">

    <hr>
    <div class="jumbotron">
        <h1 class="display-4">Thank you, <%=user.name%>!</h1>
        <p class="lead">The testing is now over, thank you for participating :)</p>
        <hr class="my-4">
        
        <p class="lead">
          <a class="btn btn-primary btn-lg" href="/" role="button">Homepage</a>
          <a class="btn btn-success btn-lg" href="http://www.ayannah.com" target="_blank"role="button">Visit Ayannah</a>
        </p>

        <form method="POST" action="/thankyou" class="needs-validation" novalidate>

            <div id="form-group">
              <label class="lead">Leave a comment!</label>
              <textarea class="form-control" name="comment" id="validationCustom01" placeholder="Insert comment here" required></textarea>
              <div class="invalid-feedback">Comment is required.</div>
            </div>
        
              <br>
                  <input class="btn btn-primary" type="submit" value="Submit">
              </form>

      </div>
    
</div>

<script>
    (function() {
      'use strict';
      window.addEventListener('load', function() {
        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.getElementsByClassName('needs-validation');
        // Loop over them and prevent submission
        var validation = Array.prototype.filter.call(forms, function(form) {
          form.addEventListener('submit', function(event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();
    </script>

